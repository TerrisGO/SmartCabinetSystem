      <h2>Sorry your payment has failed</h2>
      <h3>Due to times up reasons or error.</h3>
    <%}%>
    
    <%var box_IDx =  (typeof selectedbid !== 'undefined') ? selectedbid : "X"%>
    <h3>Box ID: <%=box_IDx %></h3>
    <%var varfail = (typeof failed !== 'undefined') ? failed : "fail";%>
    <% if (varfail == "success"){%>
    <h3>Unlocking Successfully</h3>
    <%}else{%>
      <h3>Unlocking Failed</h3>
    <%}%>
</div>

