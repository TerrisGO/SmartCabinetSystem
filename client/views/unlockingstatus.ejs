<body>
<% include partials/menu %>

<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <button type="submit" onclick="window.location.href='/'" class="btn1"> </Button> 
    <%var paymstatus =  (typeof showPaymentStatus !== 'undefined') ? showPaymentStatus : "X"%>
